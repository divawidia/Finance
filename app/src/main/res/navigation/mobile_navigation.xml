<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.kelompok8.finance.ui.home.HomeActivity"
        android:label="@string/title_home"
        tools:layout="@layout/activity_home" />

    <fragment
        android:id="@+id/navigation_statistic"
        android:name="com.kelompok8.finance.ui.stats.StatisticActivity"
        android:label="@string/title_stats"
        tools:layout="@layout/activity_statistic" />

    <fragment
        android:id="@+id/navigation_wallets"
        android:name="com.kelompok8.finance.ui.wallets.WalletsFragment"
        android:label="@string/title_wallets"
        tools:layout="@layout/wallets_fragment" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.kelompok8.finance.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/profile_fragment" />

</navigation>