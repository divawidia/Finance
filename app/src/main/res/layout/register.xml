<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ui.login.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/bg"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="401dp"
                android:layout_height="305dp"
                android:src="@drawable/ic_register"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="-30dp"
            android:background="@drawable/bg_login"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat datang kembali!"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/green"
                android:layout_marginStart="34dp"
                android:layout_marginTop="60dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buat akunmu untuk menjelajah"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/grey"
                android:layout_marginStart="34dp" />
            <EditText
                android:id="@+id/emailregis"
                android:layout_width="346dp"
                android:layout_height="46dp"
                android:hint="Email"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:background="@drawable/edt_login"
                android:drawableStart="@drawable/ic_email"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="34dp"/>
            <EditText
                android:id="@+id/usernameregis"
                android:layout_width="346dp"
                android:layout_height="46dp"
                android:hint="Username"
                android:textSize="16sp"
                android:inputType="text"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:background="@drawable/edt_login"
                android:drawableStart="@drawable/ic_username"
                android:layout_marginStart="34dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/passregis"
                android:layout_width="346dp"
                android:layout_height="46dp"
                android:hint="Password"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:background="@drawable/edt_login"
                android:drawableStart="@drawable/ic_password"
                android:layout_marginStart="34dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/green"
                    android:checked="false"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dengan mendaftar, saya setuju dengan persyaratan layanan dan kebijakan privasi"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black" />
            </LinearLayout>
            <Button
                android:id="@+id/btnregis"
                android:layout_width="343dp"
                android:layout_height="56dp"
                android:text="DAFTAR"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sudah punya akun?"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium" />
                <TextView
                    android:id="@+id/btnmasuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Masuk"
                    android:textColor="@color/green"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>