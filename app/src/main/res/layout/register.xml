<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@color/bg"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:layout_width="351dp"
            android:layout_height="245dp"
            android:src="@drawable/ic_register"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="240dp"
        android:background="@drawable/bg_login"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat datang kembali!"
            android:textSize="24dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/green"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="60dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buat akunmu untuk menjelajah"
            android:textSize="40px"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/grey"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="90dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/emailregis"
            android:layout_width="346dp"
            android:layout_height="46dp"
            android:hint="Email"
            android:textSize="40px"
            android:textColor="@color/black"
            android:background="@drawable/edt_login"
            android:drawableStart="@drawable/ic_email"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="133dp"
            android:drawableLeft="@drawable/ic_email" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/usernameregis"
            android:layout_width="346dp"
            android:layout_height="46dp"
            android:hint="Username"
            android:textSize="40px"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:background="@drawable/edt_login"
            android:drawableStart="@drawable/ic_username"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="190dp"
            android:drawableLeft="@drawable/ic_username" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/passregis"
            android:layout_width="346dp"
            android:layout_height="46dp"
            android:hint="Password"
            android:textSize="40px"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:background="@drawable/edt_login"
            android:drawableStart="@drawable/ic_password"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="245dp"
            android:drawableLeft="@drawable/ic_password" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dengan mendaftar, saya setuju dengan"
            android:textSize="30px"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="310dp" />
    </LinearLayout>

    <LinearLayout
    android:layout_marginTop="250dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <CheckBox
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="300dp"
        android:buttonTint="@color/green"
        android:checked="true" />

</LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="persyaratan"
            android:textSize="30px"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/green"
            android:layout_marginStart="303dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="310dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="layanan"
            android:textSize="30px"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/green"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="325dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dan"
            android:textSize="30px"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="325dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="250dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kebijakan privasi"
            android:textSize="30px"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/green"
            android:layout_marginStart="145dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="325dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="240dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnregis"
            android:layout_width="343dp"
            android:layout_height="56dp"
            android:text="DAFTAR"
            android:textSize="30px"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="370dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="240dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="Sudah punya akun?"
            android:textSize="30px"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="430dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="240dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnmasuk"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Masuk"
            android:textColor="@color/green"
            android:textSize="30px"
            android:layout_marginStart="227dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="430dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>